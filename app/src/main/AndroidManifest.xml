<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.luxevista.resort">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Minimum SDK and Target SDK -->
    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="33" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LuxeVista"
        tools:targetApi="31">

        <!-- Splash Screen Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Registration Activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="false" />

        <!-- Room Booking Activity -->
        <activity
            android:name=".RoomBookingActivity"
            android:exported="false" />

        <!-- Service Reservation Activity -->
        <activity
            android:name=".ServiceBookingActivity"
            android:exported="false" />

        <!-- Local Attractions Activity -->
        <activity
            android:name=".LocalAttractionsActivity"
            android:exported="false" />

        <!-- Profile Management -->
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />

        <!-- Notifications Setup -->
        <activity
            android:name=".NotificationsActivity"
            android:enabled="true"
            android:exported="false" />

        <!-- Content Provider for Database Access -->
        <provider
            android:name=".LuxeVistaProvider"
            android:authorities="com.luxevista.resort.provider"
            android:exported="false"
            android:grantUriPermissions="true" />

    </application>

</manifest>
